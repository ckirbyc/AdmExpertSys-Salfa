@model CL.AdmExpertSys.WEB.Presentation.ViewModel.LoginVm
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Login.cshtml";
    var mensajeError = ViewBag.MensajeError;
}

<div class="container-fluid">
    <div class="row">

        <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 main">

            <div class="panel panel-primary">
                <!-- Default panel contents -->
                <div class="panel-heading text-center">
                    <div class="col-xs-10 col-md-5">
                        <img class="img-responsive saniHeaderLoginImg" src="@Url.Content("~/Img/logo_header.png")" width="50%" alt="Salfa logo">
                    </div>
                    <div class="text-left">
                        <h4 class="saniHeaderLogin colorWhite">Easy User - v 2.0</h4>
                    </div>
                </div>
                <div class="panel-body">
                    @*<div class="col-md-5">
                        <img alt="Snoopy image" class="img-responsive" src="~/Img/vecinos.png">
                        <div class="pull-left">v 1.0.0.0</div>
                    </div>*@
                    @using (Html.BeginForm("ValidaLogin", "Home", FormMethod.Post, new { id = "formLogin" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.UtilizarAutenticacion)
                        @Html.HiddenFor(model => model.TienePerfilesAsociados)

                        <form class="form-horizontal col-md-7" role="form">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon glyphicon glyphicon-user"></div>
                                    @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control", @placeholder = "Usuario", @id = "Rut", @name = "Rut" })
                                    @Html.ValidationMessageFor(model => model.NombreUsuario)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon glyphicon glyphicon-lock"></div>
                                    @Html.TextBoxFor(m => m.ClaveUsuario, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(model => model.ClaveUsuario)
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(mensajeError))
                            {
                                <div class="form-group">
                                    <div class="input-group" style="color:#a94442;">
                                        <strong>@mensajeError</strong>
                                    </div>
                                </div>
                            }

                            @if (Model.EstaAutenticado.HasValue)
                            {
                                if (!Model.EstaAutenticado.Value)
                                {
                                    <div class="form-group">
                                        <div class="input-group" style="color:#a94442;">
                                            <strong>Usuario o contraseña no v&aacute;lidos.</strong>
                                        </div>
                                    </div>
                                }
                            }
                            @if (Model.EstaAutenticado.HasValue && Model.TienePerfilesAsociados.HasValue)
                            {
                                if (!Model.TienePerfilesAsociados.Value && Model.EstaAutenticado.Value)
                                {
                                    <div class="form-group">
                                        <div class="input-group" style="color:#a94442;">
                                            <strong>El usuario que est&aacute; tratando de acceder, no tiene perfiles asociados.</strong>
                                        </div>
                                    </div>
                                }
                            }

                            <div class="form-group">
                                @*<a href="#" target="_blank">Obtener Clave</a>*@
                                <a onclick="document.getElementById('formLogin').submit()" href="#" class="btn btn-danger pull-right" id="btnConectar">
                                    <span class="glyphicon glyphicon-log-in"></span>
                                    Conectar
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#btnConectar").off('click').click(function () {
        $("#loading-modal").show();
    });
</script>